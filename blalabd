 function love.load()


     playGroundX = 0
     
     playGroundY = 0
     
     playGroundWidth = 500
     
     playGroundHeight = 500
     
     playerX = 250
     
     playerY = 400
     
     playerXSpeed = 200
     
     playerYSpeed = 0
     
     playerWidth = 30
     
     playerHeight = 60
     
     startX = 235
     
     startY = 461
     
     startXSpeed = 0
     
     startYSpeed = 300
     
     startWidth = 60
     
     startHeight = 30
 end

 function love.update(dt)

     playerYSpeedGravity = 516 * dt 
     
     if playerY + playerHeight >= startY then 
     
          playerYSpeedGravity = 0
     
     else playerYSpeedKatlari = 516 * dt
     
     end
     
     playerYSpeed = playerYSpeed + (playerYSpeedGravity * dt)
     
     playerY = playerY + playerYSpeed
     
     function love.keypressed(key)
     
          if key == "space" then 
     
               playerYSpeed = -200 * dt
     
          end
     
     end
     
     if love.keyboard.isDown("right") then 
     
          playerX = playerX + playerXSpeed * dt
     
     elseif love.keyboard.isDown("left") then 
     
          playerX = playerX - playerXSpeed * dt
     
     end
     
     platform.width = love.graphics.getWidth()
     platform.height = love.graphics.getHeight()

     platform.x = 0
     platform.y = platform.height / 2
 end
     for i, v in ipairs(objects) do
       local canMove = true
       if CheckCollision(v,g) then
         canMove = false -- object has touched ground
       else
         for j,k in ipairs(objects) do -- here we check if the object is touching another object
           if i ~= j and CheckCollision(v, k) then
             canMove = false -- object has touched another object
           end
         end
       end
       if canMove then -- if the object hasn't touched anything
         v.y = v.y + 100*dt 
       end
     end
   
     
     
     platform = {}
     function love.draw()
     
     love.graphics.setColor(1, 0, 0, 1)
     love.graphics.rectangle("fill", platform.x, platform.y, platform.width, platform.height)
     
     love.graphics.setColor(1, 1, 1)
     
     love.graphics.rectangle("fill", playerX, playerY, playerWidth, playerHeight)
     
     love.graphics.setColor(1, 0, 0, 1)
     
     love.graphics.rectangle("fill", startX, startY, startWidth, startHeight)
     end
     
    






